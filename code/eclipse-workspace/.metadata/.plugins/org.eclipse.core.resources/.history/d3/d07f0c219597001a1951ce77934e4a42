	private StateUser extractStateUserrFromResultSet throws SQLException {
		int id;
		String name;
		StateUser stateUser = null;
				try {
			
			if (rs.next()) {
				id = rs.getInt("id");
				name = rs.getString("name");
				stateUser = new RoleUser(id, name);
			}
			return stateUser;
		} catch (SQLException ex) {
			return null;
		}
	}
	
	
